{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@config": ["./src/config.ts"],
      "@database": ["./src/database.ts"],
      "@customTypes/*": ["./src/types/*"]
    }
  }
}
